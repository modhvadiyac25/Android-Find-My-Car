<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMICalculator">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/mmain_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/displaybolditalic"
            android:text="Car Loan EMI Calculator"
            android:textColor="@color/black"
            android:background="@color/btn_clr"
            android:textSize="36sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_heading"
            android:text="Car Loan Amount"
            android:textSize="24sp"
            android:textColor="@color/btn_clr"
            android:fontFamily="@font/displaybolditalic"
            android:layout_below="@+id/main_heading"
            android:layout_marginTop="90dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/principle_amount"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@+id/sub_heading"
            android:inputType="text"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/principle_amount_seekbaar"
            android:layout_below="@+id/principle_amount" />


        <EditText
            android:id="@+id/RsSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/displayblack"
            android:layout_alignParentRight="true"
            android:hint="₹"
            android:layout_below="@id/sub_heading"/>

        <TextView
            android:id="@+id/sub_heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/principle_amount_seekbaar"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/displaybolditalic"
            android:text="Interest Rate"
            android:textColor="@color/btn_clr"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interest_amouunt"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/sub_heading1"
            android:inputType="text"/>

        <EditText
            android:id="@+id/PerSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/displayblack"
            android:layout_alignParentRight="true"
            android:hint="%"
            android:layout_below="@id/sub_heading1"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/innterest_amount_seekbar"
            android:layout_below="@+id/sub_heading1"
            android:layout_marginTop="25dp"/>


        <TextView
            android:id="@+id/sub_heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/innterest_amount_seekbar"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/displaybolditalic"
            android:text="Loan Tenure"
            android:textColor="@color/btn_clr"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loan_tenure"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/sub_heading2"
            android:inputType="text"/>

        <EditText
            android:id="@+id/Yr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/displayblack"
            android:layout_alignParentRight="true"
            android:hint="Yr"
            android:layout_below="@id/sub_heading2"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loan_tenure_seekbar"
            android:layout_below="@+id/sub_heading2"
            android:layout_marginTop="35dp"/>


        <TextView
            android:id="@+id/sub_heading3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loan_tenure_seekbar"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/displaybolditalic"
            android:text="Monthly Loan Emi"
            android:textColor="@color/btn_clr"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emi"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/sub_heading3"
            android:inputType="number"
            android:background="@color/home_background"/>

        <EditText
            android:id="@+id/RsSymbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/bold"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:hint="₹"
            android:layout_below="@id/sub_heading3"/>

        <TextView
            android:id="@+id/sub_heading4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emi"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/displaybolditalic"
            android:text="Total Interest Pyable"
            android:textColor="@color/btn_clr"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_interest"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/sub_heading4"
            android:inputType="text"
            android:background="@color/home_background"/>

        <EditText
            android:id="@+id/RsSymbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/bold"
            android:layout_alignParentRight="true"
            android:hint="₹"
            android:layout_below="@id/sub_heading4"/>

        <TextView
            android:id="@+id/sub_heading5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_interest"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/displaybolditalic"
            android:text="Total Payment (Principal+Interest)"
            android:textColor="@color/btn_clr"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pyable_amount"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/sub_heading5"
            android:inputType="text"
            android:background="@color/home_background"/>

        <EditText
            android:id="@+id/RsSymbol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="-10dp"
            android:textColor="@color/black1"
            android:fontFamily="@font/bold"
            android:layout_alignParentRight="true"
            android:hint="₹"
            android:layout_below="@id/sub_heading5"/>
    </RelativeLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>